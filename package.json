{
	"name": "vender",
	"version": "0.1.0",
	"description": "Gives you what you want.",
	"main": "main.js",
	"scripts": {
		"start": "electron .",
		"test": "echo \"Error: no test specified\" && exit 1",
		"pack": "build --dir",
		"postinstall": "electron-builder install-app-deps",
		"dist": "electron-builder"
	},
	"author": "Guy Mor",
	"license": "MIT",
	"devDependencies": {
		"electron": "^9.1.0",
		"electron-builder": "latest",
		"electron-rebuild": "^1.8.5"
	},
	"dependencies": {
		"ffi": "^2.3.0",
		"icon-extractor": "^1.0.3",
		"ref": "^1.3.5",
		"windows-shortcuts": "^0.1.6"
	},
	"build": {
		"appId": "yourappid",
		"asar": false,
		"dmg": {
			"contents": [
				{
					"x": 110,
					"y": 150
				},
				{
					"x": 240,
					"y": 150,
					"type": "link",
					"path": "/Applications"
				}
			]
		},
		"linux": {
			"target": [
				"AppImage",
				"deb"
			]
		},
		"win": {
			"target": "NSIS",
			"icon": "build/icon.ico"
		}
	}
}
